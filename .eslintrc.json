{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
      "airbnb",
      "plugin:react-hooks/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react-hooks"
    ],
    "rules": {
      "linebreak-style": 0,
      "indent": "off",
      "react/jsx-filename-extension": [0],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
}